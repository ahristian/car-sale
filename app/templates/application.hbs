<NavBar/>

<h2 id="title">Authentication</h2>
{{#if session.isAuthenticated}}
  Logged in as {{session.currentUser.displayName}}
  <button {{action "signOut"}}>Sign Out</button>
{{else}}
  <form>
    <div class="form-group">
      {{input type="text" value=userEmail placeholder="Email" class="form-control"}}
    </div>
    <div class="form-group">
      {{input type="text" value=userPassword placeholder="Password" class="form-control"}}
    </div>
  </form>
   <button class="btn btn-info" {{action "singIn"}}> Sign In </button>
{{/if}}
{{outlet}}



<Footer/>