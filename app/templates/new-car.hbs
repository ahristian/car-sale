<div class="container-fluid other-pages-background">
</div>
<section class="post-car px-2">
  <div class="col-lg text-center mt-4">
    <h2>Sell My Car</h2>
  </div>
  <form {{action "submitCar" on="submit"}} class="contact-form container">
    <div class="row pt-4">
      <div class="col-lg">

        <div class="input-group mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text">Car Brand:</span>
          </div>
          {{input type="text" value=brand class="form-control"}}
        </div>

        <div class="input-group mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text">Car Model:</span>
          </div>
          {{input type="text" value=model class="form-control"}}
        </div>

        <div class="input-group mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text">Car Year:</span>
          </div>
          {{input type="number" value=year class="form-control"}}
        </div>

        <div class="input-group mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text">Car Mileage (miles):</span>
          </div>
          {{input type="number" value=mileage class="form-control"}}
        </div>

        <div class="input-group mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text">Car Color:</span>
          </div>
          {{input type="text" value=color class="form-control"}}
        </div>
        <div class="input-group mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text">Car Image link:</span>
          </div>
          {{input type="link" value=image class="form-control"}}
        </div>
        <div class="input-group mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text">Car Price: $</span>
          </div>
          {{input type="number" value=price class="form-control"}}
        </div>
      </div>

      <div class="col-lg">
        <div class="mt-4">
          <span class="input-group-text">Car Description:</span>
          {{textarea type="text" value=description class="form-control" rows="6"}}
        </div>
        <div class="input-group mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text">Your Name: </span>
          </div>
          {{input type="text" value=name class="form-control"}}
        </div>

        <div class="input-group mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text">Your Email:</span>
          </div>
          {{input type="email" value=email class="form-control"}}
        </div>

        <div class="input-group mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text">Your Phone:</span>
          </div>
          {{input type="number" value=phone class="form-control"}}
        </div>
      </div>
    </div>
    <div class="buttonFix align-self-end">
      <input class="btn btn-dark mt-5" type="Submit" value="Submit">
    </div>
  </form>
</section>
